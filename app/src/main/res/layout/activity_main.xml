<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/image_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="6dp"
                android:background="@drawable/ic_profile"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/txv_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAMA"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txv_jabatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jabatan"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="2.0"
            android:background="#288e8e8e"
            android:clipToPadding="false"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_mesin"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_margin="15dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:padding="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_data_mesin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Data Mesin"
                            android:layout_gravity="center"
                            android:textColor="@color/colorSecond"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="140dp"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:background="#ededed" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_history"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:layout_marginBottom="10dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:padding="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_history" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Data History"
                            android:layout_gravity="center"
                            android:textColor="@color/colorSecond"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="140dp"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:background="#ededed" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_jadwal"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_margin="15dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:padding="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_calendar" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Jadwal Tugas"
                            android:layout_gravity="center"
                            android:textColor="@color/colorSecond"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="140dp"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:background="#ededed" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_inspeksi"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:padding="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_inspeksi" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Inspeksi"
                            android:layout_gravity="center"
                            android:textColor="@color/colorSecond"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="140dp"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:background="#ededed" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_logout"
            android:layout_gravity="center_horizontal"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/colorSecond"
            android:text="LOGOUT"
            android:textColor="#ffffff"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
</RelativeLayout>